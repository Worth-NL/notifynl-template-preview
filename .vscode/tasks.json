{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Arial font",
            "type": "shell",
            "command": "mkdir -p ~/.local/share/fonts/ && cp docker/Arial.ttf ~/.local/share/fonts/ && sudo fc-cache -f",
            "problemMatcher": [],
            "presentation": {
                "showReuseMessage": false,
                "close": true
            }
        },
        {
            "label": "Generate Template-preview version file",
            "type": "shell",
            "command": "make generate-version-file",
            "dependsOn": ["Install Arial font"],
            "problemMatcher": [],
            "presentation": {
                "showReuseMessage": false,
                "close": true
            }
        },
        {
            "label": "Install Template-preview Python requirements",
            "type": "shell",
            "command": "uv pip install -r requirements_nl_test.txt",
            "dependsOn": ["Generate Template-preview version file"],
            "problemMatcher": [],
            "presentation": {
                "showReuseMessage": false,
                "close": true
            },
            "options": {
                "env": {
                    "UV_LINK_MODE": "copy"
                }
            }
        },
        {
            "label": "Install Template-preview local notifynl-utils",
            "type": "shell",
            "command": "uv pip uninstall notifynl-utils && uv pip install -e ../notifynl-utils",
            "dependsOn": ["Install Template-preview Python requirements"],
            "problemMatcher": [],
            "presentation": {
                "showReuseMessage": false,
                "close": true
            },
            "options": {
                "env": {
                    "UV_LINK_MODE": "copy"
                }
            }
        }
    ]
}
